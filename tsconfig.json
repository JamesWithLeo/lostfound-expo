{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "bundler", // Or use "node16"
    "esModuleInterop": true,
    "skipLibCheck": true, // Skips checking of declaration files for issues
    "resolveJsonModule": true, // Allows importing JSON files as modules
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}